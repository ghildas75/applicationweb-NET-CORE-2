@using Microsoft.AspNetCore.Identity
@*@using Projet.Models*@

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Bonjour @UserManager.GetUserName(User)!&nbsp;<strong>(Profile)</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
            </li>

            <li>
                <button type="submit" class="btn btn-sm btn-default navbar-btn navbar-brand navbar-right">Se deconnecter</button>
            </li>
            
        </ul>

        <ul class="nav navbar-nav navbar-right">
            <li>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@await Component.InvokeAsync("_SommairePanier");&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            </li>
        </ul>
    </form>

    
    <div class="dropdown" style="display:inline-block">
        <button id="pageDropDown" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Le nombre de produit par page
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
           
            <li>
                
                <a asp-area="" asp-controller="Produits" asp-action="Paginer" asp-route-size ="5" asp-route-flag="2"> 5 produit par page </a>
            </li>
            <li>
                
                <a asp-area="" asp-controller="Produits" asp-action="Paginer" asp-route-size ="10" asp-route-flag="2"> 10 produit par page </a>
            </li>
            <li>
                
                <a asp-area="" asp-controller="Produits" asp-action="Paginer" asp-route-size ="15" asp-route-flag="2"> 15 produit par page </a>
            </li>
            <li>
                
                <a asp-area="" asp-controller="Produits" asp-action="Paginer" asp-route-size ="20" asp-route-flag="2"> 20 produit par page </a>
            </li>
        </ul>
    </div>
    <span>&nbsp;&nbsp;&nbsp;&nbsp;</span><span>&nbsp;&nbsp;&nbsp;&nbsp;</span><span>&nbsp;&nbsp;&nbsp;&nbsp;</span><span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
    <ul class="list-unstyled" style="display:inline-block"><li><a class="btn btn-info" role="button" asp-area="" asp-controller="Gestionnaire" asp-action="Index">&nbsp;&nbsp;&nbsp; Gestion&nbsp;&nbsp;</a></li></ul>

    

}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Inscrire</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Se Connecter</a></li>
        <li><a asp-area="" asp-controller="Gestionnaire" asp-action="Index">&nbsp;&nbsp;&nbsp; Gestion&nbsp;&nbsp;</a></li>

    </ul>
