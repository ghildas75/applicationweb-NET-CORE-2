@model Client
@{
    ViewData["Title"] = "Fiche client";
}
<h2>@ViewData["Title"] </h2>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre du connexions:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConnexionNumber)
        </dd>
        <dt>
            Date d'inscription:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt>
            Derniere connexion:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastConnected)
        </dd>
        <dt>
            Creer par:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Nom de famille
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Adresse:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Ville:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            Province:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Province)
        </dd>
        <dt>
            Postale code:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt>
            Pays:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            Numero du telephone:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            Courriel:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.clientID">Edit</a> |
